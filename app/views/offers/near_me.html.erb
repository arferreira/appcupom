<div id="main-container" class="scrollable internal view-nowon">
		<div id="main" class="clearfix">
			
			<article>
				<% unless @gps %>
					<%= link_to root_path, :class => "no-decoration" do %>
					<div id="warning-home-show">
						Para atualizar sua localização clique aqui.
					</div>
					<% end %>
				<% end %>
				
				<%= hidden_field_tag :user_latlong, @user_latlong %>
				<div class="offers-items">
					<% if @searched_offers %>
						<%= render @searched_offers, :locals => { :list => true }  %>
					<% else %>

						<!-- User Agora -->
						<%= render "use_now" %>

						<!-- Use Mais Tarde -->	
						<%= render "not_use_now" %>
						
					<% end %>
				</div>
				
				<div class="clearfix"></div>
			</article>
			
		</div> <!-- #main -->
	</div> <!-- #main-container -->