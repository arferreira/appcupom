<div class="info ui-box to-left">
	<div class="comment">
		<p class="user-comment coffee">
			<%= rec_partner_comment.timeline_resume%>: <%= recommend_partner.opinion %>
		</p>
	</div>

	<div class="row answer">
		<div class="overflow">
			<%= image_tag rec_partner_comment.user.pic(:small), :class => "border to-left", :style => "height:23px; width:23px;" unless rec_partner_comment.nil? %>
			<p class="to-left act answer-comment">
				<%= "#{last_comment.opinion}" unless last_comment.nil? %>
			</p>
		</div>
		<% if comments_count > 0 %>
			<%= link_to part_rec_path(recommend_partner.partner, recommend_partner), :class => "ver-comentarios" do %>
				Ver todos os <b><%= comments_count %> coment√°rios</b>
			<% end %>
		<% end %>
	</div>

	<%= link_to part_rec_path(recommend_partner.partner, recommend_partner), :class => "row see-comments" do %>
		Comentar <span class="push-tab to-right"></span>
	<% end %>
</div>
