<div class="info ui-box to-left">
	<div class="comment">
		<p class="user-comment coffee">
			<%= rec_offer_comment.timeline_resume %>: <%= recommend_offer.opinion %>
		</p>
	</div>

	<div class="row answer">
		<div class="overflow">
			<%= image_tag rec_offer_comment.user.pic(:small), :class => "border to-left", :style => "height:23px; width:23px;" unless rec_offer_comment.nil? %>
			<p class="to-left act answer-comment">
				<%= "#{last_comment.opinion}" unless last_comment.nil? %>
			</p>
		</div>
		<% if comments_count > 0 %>
		<%= link_to offer_rec_path(recommend_offer.offer.partner, recommend_offer.offer, recommend_offer), :class => "ver-comentarios" do %>
		Ver todos os <b><%= comments_count %> coment√°rios</b>
		<% end %>
		<% end %>
	</div>

	<%= link_to offer_rec_path(recommend_offer.offer.partner, recommend_offer.offer, recommend_offer), :class => "row see-comments" do %>
		Comentar <span class="push-tab to-right"></span>
	<% end %>
</div>
