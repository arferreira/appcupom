<div id="main-container" class="scrollable">
		<div id="main" class="clearfix view-share">
<%= form_for [@partner, @recommend_partner] do |f| %>
  <% if @recommend_partner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recommend_partner.errors.count, "error") %>:</h2>

      <ul>
      <% @recommend_partner.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<section class="share-section ">
			<div class="info-group">
				<div class="icon <%= get_category_icon @partner %>"></div>
				<h3><%= @partner.company_name %></h3>
			</div>
		
		<div class="share-field ">
			<%= f.text_area :opinion, :placeholder => "Por que recomenda esse estabelecimento?" %>
		</div>

		<%= link_to_submit content_tag(:span, "Recomendar"), :class => "std-button bt-bigsize" %>
	</section>

			
		</div> <!-- #main -->
	</div> <!-- #main-container -->
<% end %>


