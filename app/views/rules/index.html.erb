<h1>Listing rules</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Offer type</th>
    <th>Ttype</th>
    <th>Default</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rules.each do |rule| %>
  <tr>
    <td><%= rule.description %></td>
    <td><%= rule.offer_type %></td>
    <td><%= rule.ttype %></td>
    <td><%= rule.default %></td>
    <td><%= link_to 'Show', rule %></td>
    <td><%= link_to 'Edit', edit_rule_path(rule) %></td>
    <td><%= link_to 'Destroy', rule, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

